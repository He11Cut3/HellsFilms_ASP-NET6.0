@model IEnumerable<HellsFilmsBlog>

<!-- blog list section-->
<div class="page-single">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">
			</div>
			<div class="movie-item-style-2 movie-item-style-1">
				<div class="mv-item-infor">
					<ul class="nav navbar-nav flex-child-menu menu-center">
						<li class="dropdown first">
							<a>ㅤㅤㅤㅤ</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="movie-item-style-2 movie-item-style-1">
				<div class="mv-item-infor">
					<ul class="nav navbar-nav flex-child-menu menu-center">
						<li class="dropdown first">
							<a asp-action="Create">Добавить новость</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-md-9 col-sm-12 col-xs-12">
					@foreach (var blog in Model)
					{
						<div class="blog-item-style-1 blog-item-style-3">
							@if (blog.HellsFilmsBlogPhoto != null)
							{
								var base64 = Convert.ToBase64String(blog.HellsFilmsBlogPhoto);
								var imgSrc = string.Format("data:image/png;base64,{0}", base64);
								<img class="primary-img" src="@imgSrc" alt="">
							}
							<div class="blog-it-infor">
								<h3><a>@blog.HellsFilmsBlogName</a></h3>
								<span class="time">@blog.HellsFilmsBlogDate</span>
							</div>
						<ul class="nav navbar-nav flex-child-menu menu-left">
							<li class="dropdown first">
								<a asp-action="Edit" asp-route-id="@blog.HellsFilmsBlogID">Изменить</a>
							</li>
							<li class="dropdown first">
								<a asp-action="Delete" asp-route-id="@blog.HellsFilmsBlogID" class="confirmDeletion">Удалить</a>
							</li>
						</ul>
						</div>
							
					}
			</div>
		</div>
	</div>
</div>