@model IEnumerable<HellsFilmsBlog>

<div class="hero common-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1> Новости - Список</h1>
					<ul class="breadcumb">
						<li class="active"><a href="#">Главная</a></li>
						<li> <span class="ion-ios-arrow-right"></span> Новости</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- blog list section-->
<div class="page-single">
	<div class="container">
		<div class="row">
			<div class="col-md-9 col-sm-12 col-xs-12">
				
					@foreach (var blog in Model)
				{
						<div class="blog-item-style-1 blog-item-style-3">
							@if (blog.HellsFilmsBlogPhoto != null)
							{
								var base64 = Convert.ToBase64String(blog.HellsFilmsBlogPhoto);
								var imgSrc = string.Format("data:image/png;base64,{0}", base64);
								<img class="primary-img" src="@imgSrc" alt="">
							}
							<div class="blog-it-infor">
								<h3><a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.HellsFilmsBlogID">@blog.HellsFilmsBlogName</a></h3>
								<span class="time">@blog.HellsFilmsBlogDate</span>
							</div>
						</div>
					}
				
			</div>
			<div class="col-md-3 col-sm-12 col-xs-12">
				<div class="sidebar">
					<div class="sb-tags sb-it">
						<vc:tag/>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!--end of blog list section-->